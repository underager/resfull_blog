<% include ./partial/header %>
<div class="ui main text container">
    <div class="ui huge header">RestFull Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided item">
            <% blogVar.forEach(function(blog){ %>
            <div class="item">
                <div class="ui small image">
                    <img src="<%=blog.image %>">
                </div>
                <div class="content">
                    <a class="ui header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                         <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                         <p><%- blog.body.substring(0,50) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class=" right chevron icon"></i>
                            </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>




<% include ./partial/footer.ejs %>